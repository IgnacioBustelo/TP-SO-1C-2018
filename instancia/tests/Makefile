CC = gcc -Wall

TARGET = cfg strg entry_table_test handshake notify_set
LIBS = -lcommons -lpthread

API_DEPS = ../coordinator_api.h ../globals.h ../../libs/chunker.h ../../libs/conector.h ../../libs/mocks/client_server.h ../../protocolo/protocolo_coordinador_instancia.h
DEPS = ../../libs/messenger.h ../../libs/mocks/printfer.h
SRC = $(DEPS:.h=.c)

.PHONY = clean $(TARGET)

all: $(TARGET)

cfg: DEPS += ../cfg_instancia.h ../../libs/configurator.h

strg: DEPS += ../storage.h

entry_table_test: DEPS += ./utils.h ../entry_table.h ../globals.h

handshake: DEPS += $(API_DEPS)

notify_set: DEPS += $(API_DEPS)

%: %.c $(DEPS) $(SRC)
	$(CC) $< $(SRC) -o $@ $(LIBS)

clean:
	rm -f *.o $(TARGET)